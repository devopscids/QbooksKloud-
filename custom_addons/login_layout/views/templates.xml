.animated {
	-webkit-animation-duration: 1s;
	animation-duration: 1s;
	-webkit-animation-fill-mode: both;
	animation-fill-mode: both;
}

.login-body {
	background-image: url("/login_layout/static/src/img/loginBackground.png");

	/* Full height */
	height: 100vh;

	/* Center and scale the image nicely */
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}

.login-box{
    width:39.38vw;
    background-color: var(--white);
    padding-left: 4.445vw;
    padding-right: 4.445vw;
    padding-bottom: 3.8vw;

}

.logo1{
    padding-top: 3.5rem;
}

.box-heading{
    margin-top: 2.5rem;
}

.f-700{
    font-weight: 700;
}
.f-800{
    font-weight: 800;
}
.forgot{
    font-size: var(--font-size-14);
    margin-left: var(--font-size-20);
    color: var(--text-color);
    cursor: pointer;
}
.mb-28{
    margin-bottom: 1.95vw;
}
.br-0{
    border-right: unset !important;
}
.mb-25{
    margin-bottom: 1.74vw;
}

.color-yellow{
    color: var(--yellow);
}
.color-white{
    color: var(--white);
}
.font-lorin{
    font-family: 'Lorin';
}
.center-main-box{
    justify-content: center;
    align-items: center;
    min-height: 100vh;
}
.heading{

    font-size: 2.778vw;
}

.box-heading h5,.box-heading h4{
    font-weight: 700;
    font-family: 'Lorin';
}

.box-heading h5{
    font-size: var(--font-size-18);
    color: var(--yellow);
    line-height: var(--font-size-18);
    margin-bottom: var(--font-size-20);

}

.box-heading h4{
    font-size: var(--font-size-24);
    line-height: var(--font-size-24);
    margin-bottom: 2.8vw;
    color: var(--text-color);
}

.form-label{
    font-size: var(--font-size-16);
    line-height: var(--font-size-16);
    color: var(--text-color);
    margin-bottom: 0.5vw;
}
.login-box .form-control:focus {
    box-shadow: unset;
}
.login-box .form-control{
    height: 3.334vw;
    border: 1px solid #EDF0F2;
border-radius: 4px;
background-color: var(--white);
border-left: unset;
font-size: var(--font-size-14);
}

.inp-form{
    border: 1px solid transparent;
    border-radius: 4px;
}
.inp-form:hover{
    border: 1px solid var(--yellow);
}

.login-box .input-group-text,.login-box .input-group-append{
    background-color: var(--white);
    border: 1px solid #EDF0F2;
}
.login-btn{
    /* background-color: var(--yellow) !important; */
    border: unset !important;
    padding-top: 1rem;
    padding-bottom: 1rem;
    font-size: var(--font-size-16);
    font-weight: 800;
    color: var(--white);
    margin-top: 3.8vw;
    margin-bottom: 1.9vw;
    background-size: 100% 200%;
    background-image: linear-gradient(to top, var(--white) 50%, var(--yellow) 50%);
    -webkit-transition: background-position 1s;
    -moz-transition: background-position 1s;
    transition: background-position 1s;
    border: 1px solid var(--yellow) !important;

}

.login-btn:hover{
    background-position: 0 -100%;
    color: var(--yellow);
    border: 1px solid var(--yellow) !important;
}

.not-register span{
    cursor: pointer;
}
.not-register p{
    color: var(--text-color);
}
.not-register{
    font-size: var(--font-size-14);
    line-height: var(--font-size-14);
}

.btn:focus{
    outline: unset;
    box-shadow: unset !important;
}

@media (max-width: 576px) {
    .box-heading h5{
        font-size: 1.125rem;
        line-height: 18px;
        margin-bottom: 1.25em;

    }

    .box-heading h4{
        font-size: 1.5rem;
        line-height: 24px;
        margin-bottom: 2.5em;
        color: var(--text-color);
    }
    .form-label{
        font-size: 1rem;
        line-height: 16px;
        margin-bottom: 0.5em;
    }
    .mb-28{
        margin-bottom: 1.75rem;
    }
    .br-0{
        border-right: unset !important;
    }
    .mb-25{
        margin-bottom: 1.56rem;
    }

    .heading{
        text-align: center;
        font-size: 2.5rem;
    }
    .login-box{
        width:100%;
        background-color: var(--white);

    }
    .login-box .form-control{
        height: 48px;
        font-size: 0.875rem;
    }
    .login-btn{
        font-size: 1rem;
        margin-top: 3.4rem;
    }
    .not-register{
        font-size: .875rem;
        line-height: 14px;
    }
    .forgot{
        font-size: .875rem;
        margin-left: 8px;
    }
 }

                .alert {

    margin-left: 45px;
    margin-right: 40px;
}
.custom-container{
                width:90%;
                margin:auto;
                }
                .input-group-text img{
                width:var(--font-size-20);
                height:var(--font-size-20);
                    object-fit: contain;
                }
                .input-group-prepend img{
                width:var(--font-size-20);
                height:var(--font-size-20);
                    object-fit: contain;
                }

                button.btn.btn-primary.btn-block.btn.btn-primary.w-100.login-btn.font-lorin {
    padding: var(--font-size-16);
}


               input[type="checkbox"]{
     width:var(--font-size-20) !important;
                height:var(--font-size-20) !important;
}
                .checkstyle{
                display:flex;
                align-items:center;
                }

                .input-group-prepend {
    margin-right: var(--font-size-12) !important;
}
            </style>

            <section class="login-body">
                <div class="custom-container">
                    <div class="row center-main-box">
                        <div class="col-sm-12 col-md-6">
                            <h2 class="heading color-yellow f-800">Interior Design</h2>
                            <h3 class="heading color-white f-800">Process Management.</h3>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="login-box">
                                <div class="logo1 text-center">
                                    <img src="/login_layout/static/src/img/logo.png" alt="logo"/>
                                </div>

                                <div class="text-center box-heading">
                                    <h5>Welcome back!</h5>
                                    <h4>Login to your account</h4>
                                </div>

                                             <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-esc="message"/>
                        </p>

                                <form class="" role="form" t-attf-action="/web/login" method="post"
                                      onsubmit="this.action = this.action + location.hash">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                                        <label for="db" class="col-form-label">Database</label>
                                        <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                            <input type="text" name="db" t-att-value="request.db" id="db"
                                                   t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                                   required="required" readonly="readonly"/>
                                            <span class="input-group-append">
                                                <a role="button" href="/web/database/selector"
                                                   class="btn btn-secondary">Select
                                                    <i class="fa fa-database" role="img" aria-label="Database"
                                                       title="Database"></i>
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group mb-28 ">
                                        <label class="form-label f-700" for="exampleInputEmail1">Email</label>
                                        <div class="input-group mb-3 inp-form">
                                            <div class="input-group-prepend">
                                                <span
                                                        class="input-group-text"
                                                        id="basic-addon1">
                                                    <img src="/login_layout/static/src/img/email.png" alt=""/>
                                                </span>
                                            </div>
                                            <input type="text" name="login" t-att-value="login" id="login"
                                                   class="form-control font-lorin"
                                                   placeholder="Enter Your Email-ID Here"
                                                   t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                                   required="required" autofocus="autofocus" autocapitalize="off"
                                                   aria-label="Email"
                                                   aria-describedby="basic-addon1"/>
                                        </div>
                                    </div>
                                    <div class="form-group mb-25 ">
                                        <label for="exampleInputEmail1" class="form-label f-700">Password</label>
                                        <div class="input-group mb-3 inp-form">
                                            <div class="input-group-prepend">
                                                <span
                                                        class="input-group-text"
                                                        id="basic-addon1">
                                                    <img
                                                            src="/login_layout/static/src/img/lock.png"
                                                            alt=""/>
                                                </span>
                                            </div>
                                            <input type="password" name="password" id="password" placeholder="Enter Your Password"
                                                   t-attf-class="form-control #{'form-control-sm' if form_small else ''} form-control br-0 font-lorin"
                                                   required="required" autocomplete="current-password"
                                                   t-att-autofocus="'autofocus' if login else None" maxlength="4096"
                                                   aria-label="password"
                                                   aria-describedby="basic-addon1"/>
<!--                                            <div class="input-group-append pr-3">-->
<!--                                                <button class="btn " type="button" id="button-addon2">-->
<!--                                                    <img src="/login_layout/static/src/img/Group.png"/>-->
<!--                                                </button>-->
<!--                                            </div>-->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col text-left">
                                            <div class="form-group form-check checkstyle">
                                                <input type="checkbox" class="form-check-input" id="exampleCheck1"/>
                                                <label class="form-check-label font-lorin forgot" for="exampleCheck1">
                                                    Check me out
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col text-right ">
                                            <a t-if="reset_password_enabled"
                                               t-attf-href="/web/reset_password?{{ keep_query() }}">
                                                <p class="color-yellow font-lorin f-800 forgot">Forgot password?</p>
                                            </a>
                                        </div>
                                    </div>

                                    <button type="submit"
                                            class="btn btn-primary btn-block btn btn-primary w-100 login-btn font-lorin">
                                        Log In
                                    </button>
                                </form>
                                <div>


                                    <t t-if="debug">
                                        <button type="submit" name="redirect" value="/web/become"
                                                class="btn btn-link btn-sm btn-block">Log in as superuser
                                        </button>
                                    </t>
                                    <div class="o_login_auth"></div>
                                </div>

                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                <div class="text-center  not-register">
                                    <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">
                                        <p class="font-lorin f-700">Not registered yet? &amp;nbsp;<span
                                                class="color-yellow f-700 font-lorin">Register Now
                                        </span>
                                        </p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </xpath>
    </template>


</odoo>
html{
    font-size: 62.5%;

}

@font-face {
	font-family: "Lorin";
	src: url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Regular.eot");
	src: local(
			"https://dev.cids.design/web/static/src/custom_fonts/Lorin Regular"
		),
		local("/web/static/src/custom_fonts/Lorin-Regular"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Regular.eot?#iefix")
			format("embedded-opentype"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Regular.woff2")
			format("woff2"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Regular.woff")
			format("woff"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Regular.ttf")
			format("truetype");
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: "Lorin-bold";
	src: url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Bold.eot");
	src: local("https://dev.cids.design/web/static/src/custom_fonts/Lorin Bold"),
		local("Lorin-Bold"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Bold.eot?#iefix")
			format("embedded-opentype"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Bold.woff2")
			format("woff2"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Bold.woff")
			format("woff"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-Bold.ttf")
			format("truetype");
	font-weight: bold;
	font-style: normal;
}

@font-face {
	font-family: "Lorin-xbold";
	src: url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-ExtraBold.eot");
	src: local(
			"https://dev.cids.design/web/static/src/custom_fonts/Lorin ExtraBold"
		),
		local("Lorin-ExtraBold"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-ExtraBold.eot?#iefix")
			format("embedded-opentype"),
		url("https://dev.cids.design/web/static/src/custom_fonts/Lorin-ExtraBold.woff2")

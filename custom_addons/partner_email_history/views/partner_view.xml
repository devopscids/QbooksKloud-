<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partners_form_email_history" model="ir.ui.view">
            <field name="name">view.res.partner.form.email.history</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button"
                        type="object"
                        name="sent_mails"
                        string="Sent Mails"
                        icon="fa-share"
                        groups="sales_team.group_sale_salesman_all_leads">
                    </button>
                    <button class="oe_stat_button"
                        type="object"
                        name="received_mails"
                        string="Received Mails"
                        icon="fa-reply" 
                        groups="sales_team.group_sale_salesman_all_leads">
                    </button>
                </div>
            </field>
        </record>
    </data>
</openerp>